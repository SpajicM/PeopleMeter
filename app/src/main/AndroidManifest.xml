<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.zavrsni.peoplemeter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="hr.zavrsni.peoplemeter.activities.CommentActivity"></activity>
        <activity
            android:name="hr.zavrsni.peoplemeter.activities.ChannelListActivity"
            android:label="@string/peoplemeter"
            android:theme="@style/AppTheme" />
        <activity
            android:name="hr.zavrsni.peoplemeter.activities.RegisterConfirmActivity"
            android:label="RegisterConfirmActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="hr.zavrsni.peoplemeter.activities.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="hr.zavrsni.peoplemeter.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>